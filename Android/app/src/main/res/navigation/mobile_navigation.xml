<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bottomnav.ui.events.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <!-- Assume you have a SearchFragment and fragment_search.xml layout -->
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.bottomnav.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <!-- Assume you have an AddEventFragment and fragment_add_event.xml layout -->
    <fragment
        android:id="@+id/navigation_add_event"
        android:name="com.example.bottomnav.ui.events.SecondScreenAddEvent"
        android:label="@string/title_add_event"
        tools:layout="@layout/fragment_add_event" />
</navigation>
